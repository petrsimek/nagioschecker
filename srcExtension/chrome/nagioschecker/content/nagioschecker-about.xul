<?xml version="1.0"?>
<!DOCTYPE dialog SYSTEM "chrome://nagioschecker/locale/nagioschecker.dtd">

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://nagioschecker/skin/nagioschecker.css" type="text/css"?>
<dialog
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:html="http://www.w3.org/1999/xhtml"
  orient="vertical"
	title="&nch.aboutextension;"
	buttons="cancel"
  >

  <stringbundleset id="stringbundleset">
    <stringbundle id="nch-strings" src="chrome://nagioschecker/locale/nagioschecker.properties"/>
  </stringbundleset>

  <vbox>
      <label value="&nch.title;"  class="nagioschecker-about-product-name"/>
      <description class="nch">&nch.about.version; 0.9.5</description>
  </vbox>
      <separator class="thin"/>


  <tabbox maxwidth="500px">
    <tabs>
      <tab label="&nch.about;"/>
      <tab label="&nch.about.contributors;"/>
    </tabs>
    <tabpanels flex="1">
      <tabpanel  orient="vertical">


  <groupbox flex="1" class="nagioschecker-about-box">
	<label value="&nch.about;:" class="nagioschecker-about-sub-title"/>
	<description class="nch">&nch.about.description;</description>
	<separator class="thin"/>
	<hbox flex="1">
		<vbox>
    <label value="&nch.about.created;:" class="nagioschecker-about-sub-title"/>
    	<description class="nagioschecker-link" onclick="window.opener.nagioschecker.openTab('http://psimek.fxnet.cz/');window.close();">&nch.about.author;</description>
		</vbox>
		<vbox>
		<image
			class="nagioschecker-link"
			onclick="window.opener.nagioschecker.openTab('https://www.paypal.com/cgi-bin/webscr?cmd=_xclick&amp;business=petr%2esimek%40centrum%2ecz&amp;item_name=Nagios%20Checker&amp;no_shipping=0&amp;cn=Feedback&amp;tax=0&amp;currency_code=USD&amp;lc=CZ&amp;bn=PP%2dDonationsBF&amp;charset=UTF%2d8');window.close();"
			src="chrome://nagioschecker/skin/pp-donate.gif"
         	/>
		</vbox>
	</hbox>
      <separator class="thin"/>
      <label value="&nch.about.homepage;:" class="nagioschecker-about-sub-title"/>
      <description  class="nagioschecker-link" onclick="window.opener.nagioschecker.openTab('https://addons.mozilla.org/firefox/3607/');window.close();">&nch.prefs.onaddons;</description>
      <description  class="nagioschecker-link" onclick="window.opener.nagioschecker.openTab('http://code.google.com/p/nagioschecker/');window.close();">&nch.prefs.projecthome;</description>
      <separator class="thin"/>
      <label value="&nch.about.copyrights;:" class="nagioschecker-about-sub-title"/>
      <description class="nch">&nch.about.nagioscopyrights;</description>
      <description class="nagioschecker-link"
        onclick="window.opener.nagioschecker.openTab('http://www.nagios.org/');window.close();">www.nagios.org</description>
  </groupbox>

      </tabpanel>

      <tabpanel  orient="vertical">


  <groupbox flex="1" class="nagioschecker-about-box">

      <label value="&nch.about.codecontributors;:" class="nagioschecker-about-sub-title"/>
      <description class="nch">Ivo Musil (CZ), Michal Sviba (CZ)</description>
      <separator class="thin"/>
      <label value="&nch.about.ideasandbugreports;:" class="nagioschecker-about-sub-title"/>
      <description class="nch">Marcus Barczak, Carlos Basura, Daniele (IT), Mike Freitas (US), Andrea Gabellini (IT), Raphael Gangneux (UK), Jörgen Hägg (SW), Douglas Hank (US), Axel Jäger (DE), Michael Jewett (CA), Robbert Kouprie (NL), Bernard Li (CA), Geoffrey Lemaire (BE), Erwin Lubbers (NL), Tiago Martins (PT), Aleš Petrovický (CZ), Oliver Regellmann (DE), Phil Wenzlawski (US)</description>
      <separator class="thin"/>
      <label value="&nch.about.translators;:" class="nagioschecker-about-sub-title"/>
      <description class="nch">Celikbas (tr-TR), emz (bg-BG), kennith (zh-TW), markh (nl-NL), MatrixIsAllOver (it-IT), Okaryn (fr-FR), pjf (de-DE), sanchezpaa (es-ES), Humberto Sartini (pt-BR), stalker48 (ru-RU)</description>
  </groupbox>

      </tabpanel>
    </tabpanels>
  </tabbox>

</dialog>
